<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="horizontal">
	<fragment android:id="@+id/fragmentList"
		android:name="pl.charmas.gistnotes.list.NotesListFragment"
		android:layout_width="match_parent" android:layout_height="match_parent"
		android:layout_weight="2" android:tag="list"
		android:layout_margin="20px"></fragment>
	<fragment android:id="@+id/fragmentPreview" android:layout_width="match_parent"
		android:name="pl.charmas.gistnotes.PreviewFragment"
		android:layout_height="match_parent" android:layout_weight="1"
		android:tag="preview"></fragment>

</LinearLayout>
